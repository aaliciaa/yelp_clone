<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>

<%= link_to "Add a restaurant", new_restaurant_url %>

<ul>
<% @restaurants.each do |restaurant| %>
<li>  <%= link_to restaurant.name, restaurant_path(restaurant) %>
<%= link_to "Edit", edit_restaurant_path(restaurant) %>
<%= link_to "Delete", restaurant_path(restaurant),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
</li>
<% end %>
</ul>
